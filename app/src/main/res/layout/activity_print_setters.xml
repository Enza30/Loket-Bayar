<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    tools:context="mudahbayar.id.PrintSetters">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolbarholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/toolbarspln"/>
        </com.google.android.material.appbar.AppBarLayout>
     <LinearLayout
         android:orientation="vertical"
         android:layout_centerInParent="true"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <TextView
             android:textColor="@color/black"
             android:padding="10dp"
             android:text="Connected Printer is:"
             android:fontFamily="@font/roboto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"/>
         <TextView
             android:id="@+id/tvPrinter"
             android:background="@drawable/boxnopadding"
             android:textColor="@color/black"
             android:padding="10dp"
             android:text="Name"
             android:fontFamily="@font/roboto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"/>
     </LinearLayout>

    <Button
        android:id="@+id/btPrint"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="88dp"
        android:background="@drawable/tombolbiru"
        android:fontFamily="@font/roboto"
        android:text="GANTI PRINTER"
        android:textColor="@color/white" />
</RelativeLayout>